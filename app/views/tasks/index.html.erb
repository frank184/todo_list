<p id="notice"><%= notice %></p>

<h1 class="jumbotron">Listing Tasks</h1>

<%= link_to 'New Task', new_task_path, remote: true, id: 'new_task_link', class: 'btn btn-primary btn-lg' %>


<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="table_body">
    <% @tasks.each do |task| %>
      <%= render 'show', task: task %>
    <% end %>
  </tbody>
</table>
