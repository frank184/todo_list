<%= form_for(resource, as: resource_name, url: password_path(resource_name), remote: true) do |f| %>
<!-- Modal -->
<div id="new_password" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header background-todolist">
        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
        <h4 class="modal-title">Forgot your password?</h4>
      </div>
      <div class="modal-body">

        <h2 class="page-header">Forgot your password?</h2>

        <div id="devise_error_messages"><%= devise_error_messages! %></div>

        <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="modal-footer">
        <%# end form_for, very important do not refactor, otherwise close btn submits %>
        <%= button_tag(type: "submit", class: "btn btn-primary btn-lg", data: {disable_with: raw("<i class='fa fa-spin fa-refresh'></i>")}) do %>
            Send<span class="mobile-remove"> me reset instructions</span>
        <% end %>

        <% end %>
        <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>